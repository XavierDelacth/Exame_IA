{
  "environment": {
    "grid_size": 10,
    "initial_bombs_percentage": 0.5,
    "initial_treasures_count": 5,
    "max_agents": 10
  },
  "simulation": {
    "max_steps": 1000,
    "timeout_seconds": 300
  },
  "ml_models": {
    "decision_tree": {
      "max_depth": 10,
      "min_samples_split": 2,
      "random_state": 42
    },
    "knn": {
      "n_neighbors": 5,
      "weights": "uniform",
      "algorithm": "auto"
    },
    "naive_bayes": {
      "var_smoothing": 1e-9
    }
  },
  "visualization": {
    "cell_size": 60,
    "fps": 10,
    "colors": {
      "free": "#FFFFFF",
      "bomb": "#FF0000",
      "treasure": "#FFD700",
      "agent_dt": "#0000FF",
      "agent_knn": "#00FF00",
      "agent_nb": "#FF00FF",
      "explored": "#CCCCCC",
      "flag": "#FFA500"
    }
  },
  "logging": {
    "level": "INFO",
    "file": "results/logs/simulation.log"
  }
}